<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence    
                http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
                version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="ER" transaction-type= 
              "RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.bionic.edu.ERestro.Employee</class>
    <class>com.bionic.edu.ERestro.Rights</class>
    <class>com.bionic.edu.ERestro.Orders</class>
    <class>com.bionic.edu.ERestro.Food</class>
    <class>com.bionic.edu.ERestro.FoodCategory</class>
    <class>com.bionic.edu.ERestro.DeliveryStatus</class>
    <class>com.bionic.edu.ERestro.Customer</class>
    <class>com.bionic.edu.ERestro.Food_Order</class>
    <properties>
          <property name="javax.persistence.jdbc.driver"        
                 value="org.apache.derby.jdbc.EmbeddedDriver" />
          <property name="javax.persistence.jdbc.url"    
                value="jdbc:derby:D:\Workspace\git\ERestro\ER;create=true" />
          <property name="eclipselink.ddl-generation.output-mode" 
               value="database" />
      </properties>
   </persistence-unit>
</persistence> 
                 